syntax enable
set ts=2
set nocompatible
# backspace fix OpenBSD
set backspace=indent,eol,start
set encoding=utf-8
set hlsearch
set ignorecase
set laststatus=2
set ruler
set wildmenu
set path+=**

let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_winsize = 25

filetype plugin on
